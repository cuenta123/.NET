    <script>
        function Incializa() {
            ComprobarUser();
            ComprobarUserLogin();
        }

        function ComprobarUser() {
            
            var nickuser = $("#NickUser").val();
           
            if (nickuser.length > 0) {
                if (nickuser.length < 3) {
                    $("#NickUser").append('<p> Debe Insertar un Nick mayor a tres caracteres</p>');
                    $('#NickUser').css("borderColor", "red");
                    $('#RegistroEnviar').attr("disabled", true);
                }
                if (nickuser.length >= 3) {
                    $('#NickUser').css("borderColor", "green");
                    $('#RegistroEnviar').attr("disabled", false);
                }
            }
            setTimeout("ComprobarUser()", 100);
        }

        function ComprobarUserLogin() {
           
            var nickuserlogin = $("#NickUserLogin").val();
            if (nickuserlogin.length > 0) {
                if (nickuserlogin.length < 3) {
                    $("#NickUserLogin").append('<p> Debe Insertar un Nick mayor a tres caracteres </p>');
                    $('#NickUserLogin').css("borderColor", "red");
                    $('#LoginEnviar').attr("disabled", true);
                }

                if (nickuserlogin.length >= 3) {
                    $('#NickUserLogin').css("borderColor", "green");
                    $('#LoginEnviar').attr("disabled", false);
                }
            }
            setTimeout("ComprobarUserLogin()", 100);
        }
    </script>

